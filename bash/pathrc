#!/usr/bin/bash

# ======================================================================================
#
#         FILE:  pathrc
#       AUTHOR:  Henry Mai <henryfromvietnam@gmail.com>
#        USAGE:  Explained next to each command
#  DESCRIPTION:  Sytstem $PATH configuration
#      CREATED:  May 03, 2023
#
# ======================================================================================

# """"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
#                            ____   _  _____ _   _ ____   ____
#                           |  _ \ / \|_   _| | | |  _ \ / ___|
#                           | |_) / _ \ | | | |_| | |_) | |
#                           |  __/ ___ \| | |  _  |  _ <| |___
#                           |_| /_/   \_\_| |_| |_|_| \_\\____|
#
# """"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""


# set PATH so it includes user's private bin if it exists
if [[ -d "$HOME/bin" ]]; then
  export PATH="$HOME/bin:$PATH"
elif [[ -d "$HOME/.local/bin" ]]; then
  export PATH="$HOME/.local/bin:$PATH"
fi

# Custom PATHs
if [[ -d "$DOTFILES/sh" ]]; then
  export PATH="$PATH:$DOTFILES/sh"
fi

if [[ -d "/usr/local/bin/pandoc-from-markdown-to-pdf" ]]; then
  export PATH="$PATH:/usr/local/bin/pandoc-from-markdown-to-pdf"
fi

if [[ -d /usr/share/forgit/bin ]]; then
  export PATH="$PATH:/usr/share/forgit/bin"
fi

if [[ -d "$HOME/.rbenv/bin" ]]; then
  export PATH="$PATH:$HOME/.rbenv/bin"
fi

if [[ -d "$(go env GOPATH)/bin" ]]; then
  export PATH="$PATH:$(go env GOPATH)/bin"
fi

if [[ -d "$(go env GOPATH)/bin/bin" ]]; then
  export PATH="$PATH:$(go env GOPATH)/bin/bin"
fi

if [[ -d /usr/share/node-bin ]]; then
  export PATH="$PATH:/usr/share/node-bin"
fi

# Configure $PKG_CONFIG_PATH
export PKG_CONFIG_PATH="$PKG_CONFIG_PATH:/usr/lib/x86_64-linux-gnu/pkgconfig/"
