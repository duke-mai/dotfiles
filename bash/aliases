# Add an "alert" alias for long running commands.
# Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && \
  echo terminal || echo error)" "$(history|tail -n1|sed \
  -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# ls / exa aliases
alias ls='exa'
alias l='ls'
alias ll='exa -alhF'
alias la='ll --git'
alias tree='exa --tree --long'

# git aliases
alias gsh='git-sh'
alias gitsh='git-sh'
alias gst='git st'
alias gts='git st'
alias gcc='git cc'
alias gcm='git cm'
alias gca='git ca'
alias gdiff='gd'
alias gadd='ga'
alias gcl='git clone'
alias gco='git checkout'
alias gpsuh='gpush'
alias gpuhs='gpush'

# cd aliases
alias ..='cd ..'
alias ....='cd ../..'
alias cd..='cd ..'
alias cd....='cd ../..'
alias cc='cd /mnt/c/Users/TanDucMai/OneDrive\ -\ University\ of\ South\ Australia'
alias W='cd ~/myportfolio'
alias V='cd $DOTVIM'
alias F='cd $DOTFILES'
alias P='cd ~/.password-store'

# File aliases
alias bashrc='vim $DOTFILES/bash/bashrc'
alias pathrc='vim $DOTFILES/bash/pathrc'
alias vimrc='vim $DOTVIM/vimrc'
alias gitconf='vim $DOTFILES/git/gitconfig'
alias func='vim $DOTFILES/bash/functions'
alias installer='vim $DOTFILES/sh/installer'
alias aliasconf='vim $DOTFILES/bash/aliases'

# vi aliases
alias e='vim -o'
alias E='vim -o'
alias vim='vim -o'
alias vi='e3vi' # Miminal vim

# View aliases
alias view='xdg-open'
alias open='view'
alias opne='open'
alias e3='e3vi'

# Binary files pointer aliases
alias bat='batcat'
alias cat='lolcat'

# Shorthand aliases
alias py='python3'
alias ex='exit'
alias ttime='get_time'
alias hugolive='serve_hugo_site'

# Expansion aliases
alias dday='date +%d-%m-%Y'
alias toilet='toilet -t -f mono12 --filter border:metal -F metal'
alias toiletgay='toilet --filter border:gay -F gay'
alias sqlformat='sqlformat -s --reindent --keywords upper --identifiers lower'
alias pipinstall='python3 -m pip install --upgrade install'
alias updatedb='sudo updatedb'
alias pwd='pwd | figlet -f mnemonic | lolcat'

# Link aliases
# shellcheck disable=SC2034
yt='https://youtube.com'
# shellcheck disable=SC2034
fb='https://facebook.com'
